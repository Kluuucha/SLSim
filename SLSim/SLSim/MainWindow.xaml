<Window x:Class="SLSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLSim"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">
    <Canvas x:Name="MyCanvas" KeyDown="kd" Focusable="True">
        <Canvas.Background>
            <SolidColorBrush Color="Aquamarine"/>
        </Canvas.Background>
    </Canvas>
</Window>
