<Window x:Class="SLSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLSim"
        mc:Ignorable="d"
        Title="Symulacja Prostych Organizmów Żywych" Height="500" Width="1000" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">
    <Grid x:Name="MainG" Background="DarkGray">
        <Canvas x:Name="MyCanvas" Focusable="True" Margin="195,0,-0.4,0.4">
            <Canvas.Background>
                <SolidColorBrush Color="LightBlue"/>
            </Canvas.Background>

        </Canvas>
        <Button Content="Panel Kontrolny" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="175" Height="40" Click="otworzPanelKontrolny"/>
        <Button Content="Start Symulacji" HorizontalAlignment="Left" Margin="10,415,0,0" VerticalAlignment="Top" Width="175" Height="40" Click="StartSymulacji"/>
        <Button x:Name="NT" Content="Następny Tik" Visibility="Hidden" HorizontalAlignment="Left" Margin="10,365,0,0" VerticalAlignment="Top" Width="175" Height="40" Click="nextTik"/>

    </Grid>
</Window>
