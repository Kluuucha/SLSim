<Window x:Class="SLSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLSim"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">
    <Canvas x:Name="MyCanvas" KeyDown="Canvas_KeyDown"  Focusable="True">
        <Canvas.Background>
            <SolidColorBrush Color="Aquamarine"/>
        </Canvas.Background>
        <Rectangle x:Name="rec1" Width="20" Height="20" Margin="0" Canvas.Left="40" Canvas.Top="20">

            <Rectangle.Fill>
                <SolidColorBrush Color="Magenta"/>
            </Rectangle.Fill>

        </Rectangle>
    </Canvas>
</Window>
