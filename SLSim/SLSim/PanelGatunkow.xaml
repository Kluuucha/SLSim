<Window x:Class="SLSim.PanelGatunkow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLSim"
        mc:Ignorable="d"
        Title="PanelGatunkow" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="420" Margin="0,0,-1,0" VerticalAlignment="Top" Width="795">
            <TabItem Header="Gatunek nr 1">
                <Grid Background="#FFE5E5E5" Margin="-5,0,0,0">
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="207,57,0,0" TextWrapping="Wrap" TextAlignment="Right" Text="0" VerticalAlignment="Top" Width="60"/>
                    <TextBlock HorizontalAlignment="Left" Margin="36,60,0,0" TextWrapping="Wrap" Text="Ilość początkowych osobników:" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="332,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.714,0.625"><Run Text="Kolor"/><Run Text=":"/></TextBlock>
                    <ComboBox HorizontalAlignment="Left" Margin="367,55,0,0" VerticalAlignment="Top" Width="120" IsSynchronizedWithCurrentItem="False">
                        <ComboBoxItem x:Name="green" Content="Zielony" />
                        <ComboBoxItem x:Name="red" Content="Czerwony"/>
                        <ComboBoxItem x:Name="blue" Content="Niebieski"/>
                        <ComboBoxItem x:Name="orange" Content="Pomarańczowy" />
                        <ComboBoxItem x:Name="violet" Content="Fioloetowy"/>


                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Nazwa gatunku:" VerticalAlignment="Top" Margin="37,30,0,0"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="132,30,0,0" TextWrapping="Wrap" Text="Gatunek" VerticalAlignment="Top" Width="120"/>
                    <GroupBox Header="Statystyki:" HorizontalAlignment="Left" Height="260" Margin="12,110,0,0" VerticalAlignment="Top" Width="320"/>
                </Grid>
            </TabItem>
            <TabItem Header="Gatunek nr 2">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
